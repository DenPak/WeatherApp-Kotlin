<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.SearchActivity"
    android:background="@drawable/back"
    >

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="8dp"
        android:textColorHint="#DCD8D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#33776464"
            android:textColor="@color/white"
            android:hint="@string/input_city"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputDays"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColorHint="#DCD8D8"
        app:layout_constraintEnd_toEndOf="@+id/textInputCity"
        app:layout_constraintStart_toStartOf="@+id/textInputCity"
        app:layout_constraintTop_toBottomOf="@+id/textInputCity">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#33776464"
            android:textColor="@color/white"
            android:inputType="number"
            android:hint="@string/input_daysCount" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#38363E"
        android:fontFamily="@font/armata"
        android:text="Поиск"
        app:layout_constraintEnd_toEndOf="@+id/textInputDays"
        app:layout_constraintStart_toStartOf="@+id/textInputDays"
        app:layout_constraintTop_toBottomOf="@+id/textInputDays" />

</androidx.constraintlayout.widget.ConstraintLayout>